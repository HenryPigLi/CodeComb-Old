@model CodeComb.Entity.Contest
@{
    ViewBag.Title = "比赛管理员 - " + Model.Title;
    var IsMaster = (bool)ViewBag.IsMaster;
    var IsCreator = (bool)ViewBag.IsCreator;
}
<script type="text/javascript" src="~/Scripts/ckeditor/ckeditor.js"></script>
<div class="post-detail-body">
    <div class="cont-wrap">
        <div class="grid_12">
            <div class="post-detail-wrap-outer">
                <div class="profile-actions">
                    <a href="/Contest/@Model.ID" class="profile-btn"><img src="/Images/back.png" alt="返回比赛" /></a>
                    <a href="/Contest/Settings/General/@Model.ID" class="profile-btn"><img src="/Images/description.png" alt="基本信息管理" /></a>
                    <a href="/Contest/Settings/Problems/@Model.ID" class="profile-btn"><img src="/Images/code.png" alt="题目管理" /></a>
                    <a href="/Contest/Settings/Manager/@Model.ID" class="profile-btn"><img src="/Images/standings.png" alt="管理员管理" /></a>
                    <a href="/Contest/Settings/More/@Model.ID" class="profile-btn"><img src="/Images/judgers.png" alt="其他操作" /></a>
                </div>
                <div class="post-detail-wrap">
                    <div class="post-title"><h2>比赛管理员 - @Model.Title</h2></div>
                    <div class="post-info"></div>
                    <div class="post-content">
                        @foreach (var item in Model.Managers)
                        {
                            if (item.IsCreator)
                            { 
                                <p>@Html.Gravatar(item.User.Gravatar, 180, "post-face") <a href="/User/@item.UserID">@Html.Nickname(item.User.Nickname, item.User.Ratings.Sum(x=>x.Credit)+1500)</a></p>
                            }
                            else
                            { 
                                <p>@Html.Gravatar(item.User.Gravatar, 180, "post-face") <a href="/User/@item.UserID">@Html.Nickname(item.User.Nickname, item.User.Ratings.Sum(x=>x.Credit)+1500)</a> [<a href="javascript:$('#DeleteID').val(@item.ID);$.colorbox({ inline: true, width: 'auto', href: '#DeleteManager'});">删除</a>]</p>
                            }
                        }
                        @using (Html.BeginForm("AddManager", "ContestSettings", new { id = Model.ID }, FormMethod.Post, new { id = "frmAddManager" }))
                        { 
                            @Html.AntiForgeryToken()
                            <p>添加管理员：@Html.TextBox("user_id", null, new { placeholder="用户ID"}) <input type="submit"  value="添加" class="button button-def" /></p>
                        }
                    </div>
                </div>
            </div>
        </div><div class="clear"></div>
    </div>
</div>
<div style="display:none">
    <div id="DeleteContestManager">
        @using (Html.BeginForm("DeleteManager", "ContestSettings", FormMethod.Post))
        { 
            <input type="hidden" id="DeleteID" name="manager_id" />
            <h3>删除管理员</h3>
            <p>您确认要删除这名管理员吗？</p>
            <p><input type="submit" value="确认" class="button button-def"  /></p>
        }
    </div>
</div>